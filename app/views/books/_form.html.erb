<%= simple_form_for @book do |f| %>
  <%= f.input :title, label: "Title" %>
  <%= f.input :author, label: "Author" %>
  <%= f.input :description, label: "Description" %>
  <%= f.label "Category" %>
  <%= f.select :category_id, Category.order(:name).map { |c| [c.name, c.id] }, { prompt: "Choose category" } %> <br> <br>
  <%= f.file_field :book_img %> <br>
  <%= f.button :submit %>
<% end %>
